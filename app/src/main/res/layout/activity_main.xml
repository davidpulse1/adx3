<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button android:id="@+id/startBubbleBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Start Bubble"
        app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="48dp"/>

    <Button android:id="@+id/openAdsBtn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Open Ads"
        app:layout_constraintTop_toBottomOf="@id/startBubbleBtn" app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>
